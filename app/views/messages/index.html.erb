<div class="container-fluid">
    <br/>
    <div class="container" id="messages-container">
        <% @messages.each do |message| %>
            <div class="message form-group">
            <p class="lead"><strong><%= message.user.username %>:</strong> <%= message.content %></p>
            <p><small><%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %></small></p>
            </div>
        <% end %>
    </div>
    <!-- Your form for sending new messages -->
    <div class="row padding">
        <div class="col-md-4 col-md-offset-2">
            <%= form_with(model: Message.new, url: messages_path, method: :post, remote: true) do |f| %>
                <div class="form-group">
                    <%= f.label :content %><br />
                    <%= f.text_area :content, class: "form-control", placeholder: "Type your message here..." %>
                </div>

                <div class="form-group">
                    <%= f.submit "Send", class: "btn btn-success mt-2" %>
                </div>
                

            <% end %>
        </div>
    </div>
</div>

